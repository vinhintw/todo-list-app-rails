<div class="bg-white shadow rounded-lg <%= @table_type == :admin ? 'mb-8' : '' %>">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-medium text-gray-900">
      <%= t(@title_key) %> (<%= @users.count %>)
    </h2>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <% table_headers.each do |header| %>
            <th class="px-6 py-3 text-<%= header[:align] %> text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= t(header[:key]) %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <div class="ml-4">
                  <%= link_to user.username, admin_user_tasks_path(user), class: "text-sm font-medium text-blue-600 hover:underline" %>
                </div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to user.email_address, admin_user_tasks_path(user), class: "text-blue-600 hover:underline" %>
            </td>
            <% [
              [user.pending_tasks_count, "pending"],
              [user.in_progress_tasks_count, "in_progress"],
              [user.completed_tasks_count, "completed"],
              [user.cancelled_tasks_count, "cancelled"],
              [user.total_tasks_count, "total"]
            ].each do |count, status| %>
              <td class="px-6 py-4 whitespace-nowrap text-center">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= color_classes[status] %>"><%= count %></span>
              </td>
            <% end %>
            <td class="px-6 py-4 whitespace-nowrap text-center">
              <%= link_to t("admin.user.edit"), admin_edit_user_path(user), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% if @table_type == :normal && @users.empty? %>
      <div class="text-center py-8">
        <h3 class="mt-2 text-xl font-medium text-gray-900"><%= t("admin.dashboard.no_normal_found") %></h3>
      </div>
    <% end %>
  </div>
</div>
