<% content_for :title, t('tasks.title') %>
<div class="w-full">
  <div class="flex justify-between items-center p-2">
    <h1 class="font-bold text-4xl"><%= @user.username %></h1>
  </div>
  <div>
    <p class="text-gray-600 mb-4">
      <%= t('admin..dashboard.total_tasks') %>
      <%= @tasks.total_count %>
    </p>
  </div>
  <% if @tasks.total_count > 15 %>
    <div class="flex justify-start mt-2 mb-2">
      <%= paginate @tasks, theme: 'tailwind', window: 1 %>
    </div>
  <% end %>
  <div id="tasks" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
        <%= render 'tasks/task_card', task: task, link: false, actions: false %>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-center py-8"><%= t('tasks.no_tasks') %></p>
    <% end %>
  </div>
</div>
