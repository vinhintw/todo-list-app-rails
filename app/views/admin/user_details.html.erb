<% content_for :title, "User Details - #{@user.username}" %>
<div>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">User Details</h1>
        <p class="text-gray-600">Viewing tasks for <%= @user.username %></p>
      </div>
      <%= link_to admin_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Back to Admin
      <% end %>
    </div>
  </div>
  <!-- User Info Card -->
  <div class="bg-white shadow rounded-lg mb-8 p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h3 class="text-lg font-medium text-gray-900 mb-4">User Information</h3>
        <dl class="space-y-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Username</dt>
            <dd class="text-sm text-gray-900"><%= @user.username %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="text-sm text-gray-900"><%= @user.email_address %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Role</dt>
            <dd class="text-sm text-gray-900">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= @user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800' %>">
                <%= @user.admin? ? 'Administrator' : 'Regular User' %>
              </span>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Member since</dt>
            <dd class="text-sm text-gray-900"><%= @user.created_at.strftime("%B %d, %Y") %></dd>
          </div>
        </dl>
      </div>
    </div>
    <!-- Filter Tabs -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="border-b border-gray-200">
        <nav class="flex">
          <%= link_to admin_user_details_path(@user), 
          class: "#{params[:status].blank? ? 'border-indigo-500 text-indigo-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} flex-1 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-center" do %>
            All Tasks (<%= @total_tasks %>)
          <% end %>
          <%= link_to admin_user_details_path(@user, status: 'pending'), 
          class: "#{params[:status] == 'pending' ? 'border-yellow-500 text-yellow-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} flex-1 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-center" do %>
            Pending (<%= @pending_count %>)
          <% end %>
          <%= link_to admin_user_details_path(@user, status: 'in_progress'), 
          class: "#{params[:status] == 'in_progress' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} flex-1 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-center" do %>
            In Progress (<%= @in_progress_count %>)
          <% end %>
          <%= link_to admin_user_details_path(@user, status: 'completed'), 
          class: "#{params[:status] == 'completed' ? 'border-green-500 text-green-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} flex-1 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-center" do %>
            Completed (<%= @completed_count %>)
          <% end %>
          <%= link_to admin_user_details_path(@user, status: 'cancelled'), 
          class: "#{params[:status] == 'cancelled' ? 'border-red-500 text-red-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'} flex-1 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm text-center" do %>
            Cancelled (<%= @cancelled_count %>)
          <% end %>
        </nav>
      </div>
    </div>
    <!-- Tasks Table -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">
          Tasks
          <% if params[:status].present? %>
            - <%= params[:status].humanize %>
          <% end %>
          (<%= @tasks.total_count %>)
        </h2>
      </div>
      <% if @tasks.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Title
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Content
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Status
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Priority
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Tags
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Created
                </th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Duration
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @tasks.each do |task| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= task.title %>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900 max-w-xs truncate">
                      <%= task.content.present? ? task.content : '-' %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                      <%= case task.status
                          when 'pending' then 'bg-yellow-100 text-yellow-800'
                          when 'in_progress' then 'bg-blue-100 text-blue-800'
                          when 'completed' then 'bg-green-100 text-green-800'
                          when 'cancelled' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= task.status.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                      <%= case task.priority
                          when 'low' then 'bg-gray-100 text-gray-800'
                          when 'medium' then 'bg-yellow-100 text-yellow-800'
                          when 'high' then 'bg-orange-100 text-orange-800'
                          when 'urgent' then 'bg-red-100 text-red-800'
                          end %>">
                      <%= task.priority.capitalize %>
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex flex-wrap gap-1">
                      <% if task.tags.any? %>
                        <% task.tags.each do |tag| %>
                          <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-indigo-100 text-indigo-800">
                            <%= tag.name %>
                          </span>
                        <% end %>
                      <% else %>
                        <span class="text-gray-400 text-xs">No tags</span>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= task.created_at.strftime("%m/%d/%Y") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <% if task.start_time.present? && task.end_time.present? %>
                      <%= task.start_time.strftime("%m/%d %H:%M") %> - <%= task.end_time.strftime("%m/%d %H:%M") %>
                    <% else %>
                      Not specified
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- Pagination -->
        <% if @tasks.total_pages > 1 %>
          <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
              <%= paginate @tasks, theme: 'tailwind' %>
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
              <div>
                <p class="text-sm text-gray-700">
                  Showing
                  <span class="font-medium"><%= @tasks.offset_value + 1 %></span>
                  to
                  <span class="font-medium"><%= [@tasks.offset_value + @tasks.limit_value, @tasks.total_count].min %></span>
                  of
                  <span class="font-medium"><%= @tasks.total_count %></span>
                  tasks
                </p>
              </div>
              <div>
                <%= paginate @tasks, theme: 'tailwind' %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-12">
          <h3 class="mt-2 text-sm font-medium text-gray-900">No tasks found</h3>
          <p class="mt-1 text-sm text-gray-500">
            <% if params[:status].present? %>
              This user has no tasks with <%= params[:status].humanize.downcase %> status.
            <% else %>
              This user hasn't created any tasks yet.
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
