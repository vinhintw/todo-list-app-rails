<% content_for :title, t('tasks.edit_task') %>
<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl"><%= t('tasks.edit_task') %></h1>
  <%= render "form", task: @task, submit_btn: t('tasks.update_task') %>
  <%= link_to t('tasks.show_task'), @task, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to t('tasks.back_to_tasks'), tasks_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
