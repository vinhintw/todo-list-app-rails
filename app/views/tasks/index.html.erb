<% content_for :title, "Tasks" %>
<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>
  <!-- Mobile Search Bar (below navbar on mobile) -->
  <div class="px-2 pt-4 md:hidden block">
    <div class="relative">
      <div class="w-full rounded-full focus-visible:ring-slate-200">
        <% if authenticated? %>
          <%= form_with url: tasks_path, method: :get, local: true, class: "relative" do |form| %>
            <%= form.text_field :search, 
                  placeholder: "Search tasks...", 
                  value: params[:search],
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Header with title and new task button -->
  <div class="flex justify-between items-center mb-6 mt-4 md:mt-0">
    <div>
      <h1 class="font-bold text-4xl text-gray-900">
        <%= @current_filter&.humanize || 'My' %> Tasks
      </h1>
      <p class="text-gray-600 mt-1"><%= pluralize(@tasks.count, 'task') %> found</p>
    </div>
    <%= link_to "New task", new_task_path, class: "rounded-md px-4 py-2.5 bg-indigo-600 hover:bg-indigo-700 text-white font-medium shadow-sm" %>
  </div>
  <!-- Desktop Tags Filter Bar -->
  <div class="md:block mb-6">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All Tags", tasks_path(sort: params[:sort], search: params[:search]), 
          class: "inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium #{'bg-indigo-100 text-indigo-800' if params[:tag].blank?} #{'bg-gray-100 text-gray-700 hover:bg-gray-200' if params[:tag].present?}" %>
      <% Tag.joins(:tasks).where(tasks: { user: Current.user }).distinct.limit(10).each do |tag| %>
        <%= link_to tag.name.capitalize, tasks_path(tag: tag.name, status: params[:status], sort: params[:sort], search: params[:search]), 
            class: "inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium #{'bg-indigo-100 text-indigo-800' if params[:tag] == tag.name} #{'bg-gray-100 text-gray-700 hover:bg-gray-200' if params[:tag] != tag.name}" %>
      <% end %>
      <% if Tag.joins(:tasks).where(tasks: { user: Current.user }).distinct.count > 10 %>
        <button data-controller="touch" data-action="touchstart->touch#touchStart touchend->touch#touchEnd touchcancel->touch#touchCancel" class="inline-flex items-center px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 touch-target no-select">
          +<%= Tag.joins(:tasks).where(tasks: { user: Current.user }).distinct.count - 10 %> more
        </button>
      <% end %>
    </div>
  </div>
  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-6 bg-gray-50 p-4 rounded-lg space-y-3 md:space-y-0">
    <div class="flex flex-col md:flex-row md:items-center md:space-x-4 space-y-2 md:space-y-0">
      <label class="text-sm font-medium text-gray-700">Order by:</label>
      <%= form_with url: request.path, method: :get, local: true, class: "flex items-center space-x-2" do |form| %>
        <%= form.hidden_field :search, value: params[:search] if params[:search].present? %>
        <%= form.hidden_field :tag, value: params[:tag] if params[:tag].present? %>
        <%= form.select :sort, [
          ['Newest', ''],
          ['Oldest', 'created_asc'],
          ['Priority Low to High', 'priority_asc'],
          ['Priority High to Low', 'priority_desc'],
          ['Start Time Earliest', 'start_time_asc'],
          ['Start Time Latest', 'start_time_desc'],
          ['End Time Earliest', 'end_time_asc'],
          ['End Time Latest', 'end_time_desc']
        ], { prompt: 'Select sorting option', selected: params[:sort] }, { class: "block w-full md:w-auto px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", onchange: "this.form.submit();" } %>
      <% end %>
    </div>
  </div>
  <div id="tasks" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @tasks.any? %>
      <% @tasks.each do |task| %>
        <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <!-- Task Title -->
              <div class="mb-4">
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  <%= link_to task.title, task, class: "hover:text-blue-600" %>
                </h3>
              </div>
              <!-- Task Description -->
              <% if task.content.present? %>
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-700 mb-1">Description:</h4>
                  <p class="text-gray-600 text-sm leading-relaxed" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                    <%= truncate(task.content, length: 120) %>
                  </p>
                </div>
              <% end %>
              <!-- Priority and Status -->
              <div class="mb-4">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  <!-- Priority -->
                  <div class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-700 min-w-[60px]">Priority:</span>
                    <%= badge(:priority, task) %>
                  </div>
                  <!-- Status -->
                  <div class="flex items-center space-x-2">
                    <span class="text-sm font-medium text-gray-700 min-w-[60px]">Status:</span>
                    <%= badge(:status, task) %>
                  </div>
                </div>
                <!-- Tags -->
                <% if task.tags.any? %>
                  <div class="mb-4">
                    <h4 class="text-sm font-medium text-gray-700 mb-2">Tags:</h4>
                    <div class="flex flex-wrap gap-2">
                      <% task.tags.each do |tag| %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 border border-purple-200">
                          <%= tag.name %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
              <!-- Time Information -->
              <% if task.start_time.present? || task.end_time.present? %>
                <div class="mb-4">
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Time Schedule:</h4>
                  <div class="bg-blue-50 p-3 rounded-md border border-blue-200">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
                      <% if task.start_time.present? %>
                        <div class="flex items-center space-x-2">
                          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          <span class="font-medium text-blue-700">Start:</span>
                          <span class="text-blue-800"><%= task.start_time.strftime("%d/%m/%Y %H:%M") %></span>
                        </div>
                      <% end %>
                      <% if task.end_time.present? %>
                        <div class="flex items-center space-x-2">
                          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                          </svg>
                          <span class="font-medium text-blue-700">End:</span>
                          <span class="text-blue-800"><%= task.end_time.strftime("%d/%m/%Y %H:%M") %></span>
                        </div>
                      <% end %>
                    </div>
                    <% if task.start_time.present? && task.end_time.present? %>
                      <div class="mt-2 pt-2 border-t border-blue-200">
                        <div class="flex items-center space-x-2 text-sm">
                          <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                          </svg>
                          <span class="font-medium text-blue-700">Duration:</span>
                          <span class="text-blue-800 font-semibold">
                            <% duration = ((task.end_time - task.start_time) / 1.hour).round(1) %>
                            <%= duration == duration.to_i ? duration.to_i : duration %> hours
                          </span>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
            <!-- Action Buttons -->
            <div class="flex flex-col gap-2 ml-6 flex-shrink-0">
              <%= link_to "Edit", edit_task_path(task), class: "text-center rounded-md px-4 py-2 bg-blue-100 hover:bg-blue-200 text-blue-700 text-sm font-medium transition-colors" %>
              <%= button_to "Delete", task, method: :delete, class: "rounded-md px-4 py-2 text-white bg-red-600 hover:bg-red-700 text-sm font-medium transition-colors", data: { turbo_confirm: "Are you sure you want to delete this task?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg mb-4">No tasks found.</p>
        <%= link_to "Create your first task", new_task_path, class: "rounded-md px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
      </div>
    <% end %>
  </div>
</div>
