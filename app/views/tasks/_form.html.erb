<%= form_with(model: task, class: "contents") do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul class="list-disc ml-6">
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:title].none?, "border-red-400 focus:outline-red-600": task.errors[:title].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :content %>
    <%= form.textarea :content, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:content].none?, "border-red-400 focus:outline-red-600": task.errors[:content].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:start_time].none?, "border-red-400 focus:outline-red-600": task.errors[:start_time].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :end_time %>
    <%= form.datetime_field :end_time, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:end_time].none?, "border-red-400 focus:outline-red-600": task.errors[:end_time].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :priority %>
    <%= form.select :priority, options_for_select([['Low', 'low'], ['Medium', 'medium'], ['High', 'high'], ['Urgent', 'urgent']], task.priority), {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:priority].none?, "border-red-400 focus:outline-red-600": task.errors[:priority].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status, options_for_select([['Pending', 'pending'], ['In Progress', 'in_progress'], ['Completed', 'completed'], ['Cancelled', 'cancelled']], task.status), {}, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": task.errors[:status].none?, "border-red-400 focus:outline-red-600": task.errors[:status].any?}] %>
  </div>
  <div class="my-5">
    <%= form.label :tag_ids, "Tags", class: "block text-sm font-medium text-gray-700 mb-3" %>
    <div class="bg-gray-50 p-4 rounded-lg">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        <% if defined?(@tags) && @tags.present? %>
          <% @tags.each do |tag| %>
            <div class="flex items-center p-2 bg-white rounded border hover:bg-gray-50">
              <%= check_box_tag "task[tag_ids][]", tag.id, task.tag_ids.include?(tag.id), 
                  id: "task_tag_ids_#{tag.id}", 
                  class: "rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" %>
              <%= label_tag "task_tag_ids_#{tag.id}", tag.name.capitalize, 
                  class: "ml-2 text-sm text-gray-700 cursor-pointer flex-1" %>
            </div>
          <% end %>
        <% end %>
      </div>
      <p class="text-xs text-gray-500 mt-2">Select one or more tags to categorize your task</p>
    </div>
    <%= hidden_field_tag "task[tag_ids][]", "" %>
  </div>
  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
