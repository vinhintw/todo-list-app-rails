<header class="border-b p-4 md:p-6">
  <nav class="flex justify-between items-center">
    <%= link_to root_path, class: "text-2xl font-bold text-indigo-600 rounded-lg p-2 hover:bg-gray-100 transition-colors" do %>
      Task Manager
    <% end %>
    <div class="hidden md:flex space-x-6">
      <% if authenticated? %>
        <%= link_to "Tasks", tasks_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
        <%= link_to "Tags", tags_path, class: "text-gray-600 hover:text-indigo-600 transition-colors" %>
      <% else %>
        <a href="#features" class="text-gray-600 hover:text-indigo-600 transition-colors">Features</a>
        <a href="#get-demo" class="text-gray-600 hover:text-indigo-600 transition-colors">Get Demo</a>
        <a href="#contact" class="text-gray-600 hover:text-indigo-600 transition-colors">Contact</a>
      <% end %>
    </div>
    <div class="hidden md:flex space-x-4">
      <% if authenticated? %>
        <span class="text-gray-600 px-3 py-2">Welcome, <%= Current.user.username %>!</span>
        <%= button_to "Sign Out", session_path, method: :delete, 
            data: { confirm: "Are you sure you want to sign out?" },
            class: "bg-red-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-red-600 transition-colors border-0" %>
      <% else %>
        <%= link_to "Sign In", new_session_path, 
            class: "border border-indigo-500 text-indigo-500 px-6 py-2 rounded-lg hover:bg-indigo-50 transition-colors" %>
        <%= link_to "Sign Up", new_registration_path, 
            class: "bg-indigo-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-indigo-600 transition-colors" %>
      <% end %>
    </div>
    <!-- Menu button for mobile -->
    <button id="mobile-menu-button" class="md:hidden text-gray-600 hover:text-indigo-600 focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </nav>
  <!-- Mobile menu (hidden by default) -->
  <div id="mobile-menu" class="hidden md:hidden bg-white mt-4 p-4 rounded-lg shadow-lg">
    <% if authenticated? %>
      <%= link_to "Tasks", tasks_path, class: "block py-2 text-gray-600 hover:text-indigo-600 transition-colors" %>
      <%= link_to "Tags", tags_path, class: "block py-2 text-gray-600 hover:text-indigo-600 transition-colors" %>
      <div class="mt-4 space-y-2">
        <div class="text-gray-600 px-3 py-2">Welcome, <%= Current.user.username %>!</div>
        <%= button_to "Sign Out", session_path, method: :delete, 
            data: { confirm: "Are you sure you want to sign out?" },
            class: "w-full bg-red-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-red-600 transition-colors block text-center border-0" %>
      </div>
    <% else %>
      <a href="#features" class="block py-2 text-gray-600 hover:text-indigo-600 transition-colors">Features</a>
      <a href="#get-demo" class="block py-2 text-gray-600 hover:text-indigo-600 transition-colors">Get Demo</a>
      <a href="#contact" class="block py-2 text-gray-600 hover:text-indigo-600 transition-colors">Contact</a>
      <div class="mt-4 space-y-2">
        <%= link_to "Sign In", new_session_path, 
            class: "w-full border border-indigo-500 text-indigo-500 px-6 py-2 rounded-lg hover:bg-indigo-50 transition-colors block text-center" %>
        <%= link_to "Sign Up", new_registration_path, 
            class: "w-full bg-indigo-500 text-white px-6 py-2 rounded-lg shadow-md hover:bg-indigo-600 transition-colors block text-center" %>
      </div>
    <% end %>
  </div>
</header>
