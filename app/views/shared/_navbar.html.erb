<nav class="bg-white shadow-sm sticky top-0 z-40">
  <div class="p-4 sm:px-6 lg:px-8 h-16">
    <div class="flex justify-between">
      <!-- Mobile menu button -->
      <div class="flex items-center">
        <% if authenticated? %>
          <button id="mobile-sidebar-toggle" class="lg:hidden p-2 rounded-md text-gray-600 hover:text-gray-900 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        <% else %>
          <%= link_to root_path, class: "flex items-center px-2 py-2 text-xl font-bold text-indigo-600 hover:text-indigo-700" do %>
            TaskManager
          <% end %>
        <% end %>
      </div>
      <!-- Desktop Search Bar -->
      <% if authenticated? && controller_name != 'admin' %>
        <div class="hidden md:block md:w-[300px] flex-1 justify-center px-2 lg:w-[600px]">
          <div class="max-w-lg w-full lg:max-w-2xl mx-auto">
            <%= form_with url: tasks_path, method: :get, local: true, class: "relative" do |form| %>
              <%= form.text_field :search, 
                  placeholder: "Search tasks...", 
                  value: params[:search],
                  class: "block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <!-- Right side - User menu or auth buttons -->
      <div class="flex items-center">
        <% if authenticated? %>
          <!-- User dropdown -->
          <div class="relative ml-3">
            <button id="user-menu-button" class="flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" aria-expanded="false" aria-haspopup="true">
              <div class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center text-white font-medium">
                <%= Current.user.username.first.upcase %>
              </div>
            </button>
            <!-- Dropdown menu -->
            <div id="user-menu" class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-sm bg-white ring-1 ring-slate-300 ring-opacity-5 focus:outline-none" role="menu">
              <div class="py-1" role="none">
                <div class="px-4 py-2 text-sm text-gray-700 shadow-sm">
                  Signed in as <strong><%= Current.user.username %></strong>
                </div>
                <%= button_to "Sign out", session_path, method: :delete, 
                    class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 border-0 bg-transparent"
                %>
              </div>
            </div>
          </div>
        <% else %>
          <!-- Auth buttons -->
          <div class="flex items-center space-x-4">
            <%= link_to "Sign In", new_session_path, 
                class: "text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Sign Up", new_registration_path, 
                class: "bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
