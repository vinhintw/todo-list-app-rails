# Database Configuration
POSTGRES_USER=todo_list
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=todo_list_database
POSTGRES_PORT=5450

# Rails Configuration
RAILS_ENV=production
RAILS_LOG_LEVEL=info
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# App Port
APP_PORT=23000

# Ruby Version (should match .ruby-version)
RUBY_VERSION=3.3.0

# Security - IMPORTANT: Change these values!
# Generate SECRET_KEY_BASE with: bundle exec rails secret
SECRET_KEY_BASE=your_secret_key_base_here
# Get RAILS_MASTER_KEY from config/master.key file
RAILS_MASTER_KEY=your_master_key_here

# SSL Configuration (set to true if using SSL termination proxy)
RAILS_ASSUME_SSL=false
RAILS_FORCE_SSL=false
